
<style>
    .main-wrapper {
        border: 0px solid black;
        border-radius: 10px;
        padding: 20px;
        width: 400px;
        height: auto;
        background-color: #DCD0C0;
        margin: 10% auto;
        box-shadow: 3px 3px 5px 5px rgba(0, 0, 0, 0.4);
    }
    
    .search-container {
        text-align: center;
    }
    
    form {
        margin-bottom: 0px;
    }
    
    .search_btn {
        height: 40px;
        border-radius: 100%;
        border: none;
        width: 40px;
        padding: 0px;
        position: relative;
        position-left: -10px;
        color: black;
        font-weight: bold;
    }
    
    .search_btn:hover {
        background: blue;
        color: white;
    }
    
    .search_bar {
        height: 40px;
        border-radius: 10px;
        border: none;
        width: 300px;
    }
    
    .btn-container {
        text-align: center;
        padding: 20px 20px 0px 20px;
    }
    a {
        text-decoration: none;
    }
    .add_btn {
        width: 100%;
        background-color: red;
        border-color: none;
        color: white;
        font-size: 21px;
        font-weight: bold;
        border-radius: 10px;
        padding: 25px 100px;
    }
    
    .add_btn:hover {
        background-color: blue;
    }
    
    .contact {
        border: 2px solid black;
        margin: 20px;
        padding: 10px;
        border-radius: 10px;
        
    }
    
    h1 {
        margin-top: 5px;
    }
    
    .spacing {
        margin-left: 260px;
    }
    
</style>

<div class="main-wrapper">
    
    <div class="search-container">
    
        <form action="/contacts/search" method="GET">
            
            <input class="search_bar" name="search" type="text" required>
            
            <input class="search_btn" type="submit" value="Go">
        
        </form>    
    
    </div>
    
    <div class="btn-container">
        
        <a href="/contacts/new"><input class="add_btn" type="submit" value="Add a Contact"></a> 
    
    </div>
    
    <% @contacts.each do |c| %>
        <div class="contact">
            <h1> <%= c.first_name + ", " + c.last_name %> </h1>
            <p> <%= c.phone %> </p>
            <p> <%= c.address %> </p>
            <p> <%= c.city + ", " + c.state + " " + c.zip %> </p>
            <a href="/contacts/edit?id=<%=c.id %>">Edit</a>
            <a class="spacing" href="/contacts/delete?id=<%=c.id %>">Delete</a>
        </div>
    <% end %>
</div>