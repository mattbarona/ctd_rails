<a href="/courses/new">Add Course</a>
<% @courses.each do |course| %>
    <div>
        <%= course.name %>
        
        <%= course.location %>
        
        <%= course.description %>
        <a href="courses/edit?id=<%= course.id %>">Edit</a>
        <a href="/courses/show?id=<%= course.id %>">Show</a>
    </div>
<% end %>