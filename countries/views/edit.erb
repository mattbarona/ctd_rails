    <body>
        <form action="/questions" method="POST">
            <textarea name="question" placeholder="Question">
                    
                    <%= @question.question %>"
                
            </textarea>
            
            <input type="hidden" value="<%= @question.id %>" name="id">
            
            <input type="text" value = "<%= @question.answer %>" name="answer" placeholder="Answer">
            
            <input type="text" value = "<%= @question.flag %>" name="flag" placeholder="Flag">
            
            <input type="submit" value="Save">
        </form>
    </body>
</html>